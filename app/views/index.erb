<div class="container">

  <header>
    <h1>Maps with Friends</h1>
    <h2>See where your friends are</h2>
  </header>

  <% if !current_user %>
  <!-- if not register, show this -->
    <p>Enter information to register as a user.</p>
    <div class="register">
      <form action="/login" method="POST">
        <input type="text" name="user[username]" placeholder="username">
        <input type="text" name="user[email]" placeholder="email">
        <input type="text" name="user[password]" placeholder="password">
        <br>
        <input type="submit" value="submit">
      </form>
    </div>
  <% end %>

  <% if current_user && session[:user_id] = nil %>
  <!-- if not logged in, show this -->
    <div class="register">
      <form action="/login" method="POST">
        <input type="text" label="Email" name="user[email]">
        <input type="text" label="Password" name="user[password]">
      </form>
    </div>
  <% end %>

  <% if current_user %>
  <!-- Only display if logged in -->
  <div class="search-form">
    <form action="/" method="post">
      <input class="friend" name="name" type="text" placeholder="Type your name">
      <input id="address" class="controls" name="location" type="text" placeholder="Type your location">
      <input type="submit" value="Add map marker">
    </form>
  </div>

  <div id="map-canvas"></div>

  <% end %>
</div>