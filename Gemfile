source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

# activerecord ORM
gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'rspec'

gem 'bcrypt'

# development server
gem 'shotgun'

group :test do
  gem 'shoulda-matchers'
  gem 'rack-test'
  gem 'capybara'
  gem 'selenium-webdriver'
end

group :test, :development do
  gem 'factory_girl'
  gem 'faker'
end

